
mixin webinar(webinar)

	- var today = new Date();

	.tile.ph-1.pv-1
		.meetup-calendar.calendar.hidden-xs.hidden-sm(class=webinar.state == 'past' ? 'calendar--past' : null)
			.calendar__header=webinar._.startDate.format('MMM')
			.calendar__body
				.calendar__date=webinar._.startDate.format('DD')
				.calendar__year=webinar._.startDate.format('YYYY')
		.meetup-content
			h2.mv-5= webinar.name
			h5.mb-1=webinar._.startDate.format('dddd D MMM YYYY')
				|  from #{webinar._.startDate.format('h:mma')} - #{webinar._.endDate.format('h:mma')}
			if webinar.description
				p!= webinar.description